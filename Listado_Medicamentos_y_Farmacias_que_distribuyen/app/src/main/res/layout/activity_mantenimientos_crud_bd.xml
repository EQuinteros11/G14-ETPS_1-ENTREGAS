<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp"
    android:background="@color/fondo1"
    tools:context=".Mantenimientos_CRUD_BD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btnCRUDDIRECT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="CRUD DIRECCIONES" />

        <Button
            android:id="@+id/btnCRUDFARM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CRUD FARMACIA" />

        <Button
            android:id="@+id/btnCRUDMEDICAMENTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CRUD MEDICAMENTO" />

        <Button
            android:id="@+id/btnCRUDCATEGORIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CRUD CATEGORIA" />

        <Button
            android:id="@+id/btnCRUDDETALLEFARMACIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="CRUD DETALLE FARMACIA" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>