<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CB2E7"
    android:elevation="10dp"
    tools:context=".Registro_Usuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                app:srcCompat="@drawable/logo2"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="1dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/datos_registro_usuario"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:layout_editor_absoluteX="-16dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Por favor completa la información  que es obligatoria"
                    android:textAlignment="center"
                    android:textColor="#252525"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="@+id/textView5"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombres *"
                            android:textColor="#252525"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtNombreRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="Carlos Alberto"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="#252525"
                            android:textColorHint="#7C7C7C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Primer Apellido *"
                            android:textColor="#252525"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtPrimerApellidoRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="Pineda Pérez"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="#252525"
                            android:textColorHint="#7C7C7C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Segundo Apellido *"
                            android:textColor="#252525"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtSegundoApellidoRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="Pineda Pérez"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="#252525"
                            android:textColorHint="#7C7C7C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Edad *"
                            android:textColor="#252525"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtEdadRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="29"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="#252525"
                            android:textColorHint="#7C7C7C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Correo electronico"
                            android:textColor="#252525"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtCorreoRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="carlosAlberto35@gmail.com"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textColor="#252525"
                            android:textColorHint="#7C7C7C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contraseña *"
                            android:textColor="#252525"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtContrasenaRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="***************"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:textColor="#252525"
                            android:textColorHint="#7C7C7C" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/edtPass2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contraseña *"
                            android:textColor="#252525"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtConfirmacionContrasenaRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:background="#FFFFFF"
                            android:ems="10"
                            android:hint="***************"
                            android:inputType="textPassword"
                            android:padding="10dp"
                            android:textColor="#252525"
                            android:textColorHint="#7C7C7C" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnRegistrpUsuario"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#3C4557"
                    android:text="Registrar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</LinearLayout>